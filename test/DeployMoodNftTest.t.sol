pragma solidity 0.8.20;

import {Test, console} from "forge-std/Test.sol";
import {Vm} from "forge-std/Vm.sol";
import {DeployMoodNft} from "../script/DeployMoodNft.s.sol";
import {Base64} from "@openzeppelin/contracts/utils/Base64.sol";

contract MoodNftTest is Test {
    DeployMoodNft deployer;

    string happySvgImageFile = vm.readFile("./images/happy.svg");
    string sadSvgImageFile = vm.readFile("./images/sad.svg");

    string private happyImageUri =
        "data:image/svg+xml;base64,";

    string private sadImageUri =
        "data:image/svg+xml;base64,";

    function setUp() external {
        deployer = new DeployMoodNft();
    }

    function test_HappySvgImageUri_IsCorrect() public {
        string memory expectedImageUri = deployer.svgToImageURI(happySvgImageFile);
        assertEq(expectedImageUri, happyImageUri);
    }

    function test_SadSvgImageUri_IsCorrect() public {
        string memory expectedImageUri = deployer.svgToImageURI(sadSvgImageFile);
        assertEq(expectedImageUri, sadImageUri);
    }
}
